{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es5",
        "outDir": ".tmp/out"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/main-aot.ts",
        "dist"
    ],
    "compileOnSave": false,
    "angularCompilerOptions": {
        "genDir": ".tmp/aot",
        "skipMetadataEmit": true
    }
}